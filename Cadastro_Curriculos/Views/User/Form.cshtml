@model UserViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Cadastro de Currículos</h1>
<form action="Save" method="post">
    <fieldset>
    <div class="form-group row">
      <label for="ID" class="col-sm-2 col-form-label">ID</label>
      <div class="col-sm-10">
         <input class="form-control-plaintext" type="number" Name="Id" value="@Model.Id" readonly />
      </div>
    </div>

    <div class="form-group row">
      <label for="CPF" class="col-sm-2 col-form-label">CPF</label>
      <div class="col-sm-10">
         <input class="form-control-plaintext" type="text" Name="CPF" value="@Model.CPF" placeholder="123.456.789-00" pattern="\d{3}\.\d{3}\.\d{3}-\d{2}"
           title="Digite o CPF no formato nnn.nnn.nnn-nn" />
      </div>
    </div>

     <div class="form-group row">
      <label for="Nome" class="col-sm-2 col-form-label">Nome do usuário</label>
      <div class="col-sm-10">
         <input class="form-control-plaintext" type="text" Name="Nome" value="@Model.Nome" placeholder="Ex. João da Silva" />
      </div>
    </div>

    <div class="form-group row">
      <label for="endereco" class="col-sm-2 col-form-label">Endereço</label>
      <div class="col-sm-10">
         <input class="form-control-plaintext" type="text" Name="endereco" value="@Model.Endereco" placeholder="Digite seu endereço"/>
      </div>
    </div>

    <div class="form-group row">
      <label for="numero" class="col-sm-2 col-form-label">N°</label>
      <div class="col-sm-10">
         <input class="form-control-plaintext" type="number" Name="numero" value="@Model.Numero" />
      </div>
    </div>

     <div class="form-group row">
      <label for="Numero" class="col-sm-2 col-form-label">DDD</label>
      <div class="col-sm-10">
         <input class="form-control-plaintext" type="number" name="DDD"  value="@Model.DDD" />
      </div>
    </div>

     <div class="form-group row">
      <label for="telefone" class="col-sm-2 col-form-label">Telefone</label>
      <div class="col-sm-10">
         <input class="form-control-plaintext" type="number" name="telefone"  value="@Model.Telefone"  />
      </div>
    </div>

    <div class="form-group row">
      <label for="email" class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
         <input class="form-control-plaintext" type="text" name="email"  value="@Model.Email"  />
      </div>
    </div>

     <div class="form-group row">
      <label for="salario" class="col-sm-2 col-form-label">Pretensão Salarial</label>
      <div class="col-sm-10">
         <input class="form-control-plaintext" type="number" name="salario"  value="@Model.Salario" />
      </div>
    </div>

     <div class="form-group row">
      <label for="cargo" class="col-sm-2 col-form-label">Cargo Pretendido</label>
      <div class="col-sm-10">
         <input class="form-control-plaintext" type="text" name="cargo"  value="@Model.Cargo"  />
      </div>
    </div>
    </fieldset>

    <h2> Formação Acadêmica </h2>

    <label for="instituicao1" class="form-label">Instituição</label>
    <input type="text" name="instituicao1"  value="@Model.Instituicao1" />

    <label for="formacao1" class="form-label">Formação</label>
    <input type="text" name="formacao1"  value="@Model.Formacao1"  />

    <label for="conclusao1" class="form-label">Conclusão</label>
    <input type="date" name="conclusao1"  value="@Model.Conclusao1.Year-@Model.Conclusao1.Month-@Model.Conclusao1.Day"/>
    <br /><br />

    <label for="instituicao2" class="form-label">Instituição</label>
    <input type="text" name="instituicao2"  value="@Model.Instituicao2"  />

    <label for="formacao2" class="form-label">Formação</label>
    <input type="text" name="formacao2"  value="@Model.Formacao2"  />

    <label for="conclusao2" class="form-label">Conclusão</label>
    <input type="date" name="conclusao2"  value="@Model.Conclusao2"/>
    <br /><br />

    <label for="instituicao3" class="form-label">Instituição</label>
    <input type="text" name="Instituicao3"  value="@Model.Instituicao3"  />

    <label for="formacao3" class="form-label">Formação</label>
    <input type="text" name="formacao3"  value="@Model.Formacao3"  />

    <label for="conclusao3" class="form-label">Conclusão</label>
    <input type="date" name="conclusao3"  value="@Model.Conclusao3"  />
    <br /><br />

    <label for="instituicao4" class="form-label">Instituição</label>
    <input type="text" name="Instituicao4"  value="@Model.Instituicao4"  />

    <label for="formacao3" class="form-label">Formação</label>
    <input type="text" name="formacao4"  value="@Model.Formacao4"  />

    <label for="conclusao4" class="form-label">Conclusão</label>
    <input type="date" name="conclusao4"  value="@Model.Conclusao4"  />
    <br /><br />

    <label for="Instituicao" class="form-label">Instituição</label>
    <input type="text" name="Instituicao5"  value="@Model.Instituicao5"  />

    <label for="Formacao" class="form-label">Formação</label>
    <input type="text" name="formacao5"  value="@Model.Formacao5"  />

    <label for="Conclusao" class="form-label">Conclusão</label>
    <input type="date" name="conclusao5"  value="@Model.Conclusao5"  />
    <br /><br />

    <h1> Experiências profissionais </h1>

    <label for="empresa1" class="form-label">Empresa</label>
    <input type="text" name="empresa1"  value="@Model.Empresa1"  />

    <label for="funcao1" class="form-label">Função</label>
    <input type="text" name="funcao1"  value="@Model.Funcao1"  />
    <br /><br />

    <label for="empresa2" class="form-label">Empresa</label>
    <input type="text" name="empresa2"  value="@Model.Empresa2" />

    <label for="funcao2" class="form-label">Função</label>
    <input type="text" name="funcao2"  value="@Model.Funcao2"  />
    <br /><br />

    <label for="empresa3" class="form-label">Empresa</label>
    <input type="text" name="empresa3"  value="@Model.Empresa3"  />

    <label for="funcao3" class="form-label">Função</label>
    <input type="text" name="funcao3"  value="@Model.Funcao3"  />

    <br /><br />

    <h2> Idiomas </h2>

     <div class="form-group">
      <label for="exampleSelect1" class="form-label mt-4">Escolha o idioma:</label>
      <select id="idioma" class="form-select" name="idioma" value="@Model.Idioma">
        <option value="Ingles">Inglês </option>
        <option value="Alemao">Alemão </option>
        <option value="Espanhol">Espanhol </option>
        <option value="Mandarim">Mandarim </option>
        <option value="Frances">Francês </option>
      </select>
    </div>

    <div class="form-group">
      <label for="exampleSelect1" class="form-label mt-4">Escolha o nível:</label>
      <select id="nivel" class="form-select" name="nivel" value="@Model.Nivel">
        <option value="Basico"> Básico</option>
        <option value="Intermediario">Intermediário </option>
        <option value="Avancado">Avançado </option>
        <option value="Fluente">Fluente </option>
      </select>
    </div>
    
    <button type="submit" class="btn btn-primary" value="Salvar dados">Submit</button>
</form>
