@model List<UserViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Curriculos Cadastrados</h2>
<br />
<br />
<a href="/user/create" class="btn btn-success"> Novo Currículo</a>
<br />
<br />
<table class="table table-responsive">
    <tr>
        <th></th>
        <th></th>
        <th></th>
        <th>ID</th>
        <th>CPF</th>
        <th>Nome</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>

            <td><a href="/user/Edit?Id=@user.Id">Editar</a> </td>
            <td><a href="javascript:apagarAluno(@user.Id)">Deletar</a> </td>
            <td><a href="javascript:ExibirAluno(@user.Id)">Exibir</a> </td>
            <td>@user.Id</td>
            <td>@user.CPF</td>
            <td>@user.Nome</td>
        </tr>
    }
</table>

<!-- Temos duas scripts a primeira apagarAluno, quando o usuario clica no botao apagar, primeiro é feito uma confirmação, caso precise excluir o script ira criar
    um link informando o user/delete/id, sendo o id referente como metodo-->
<!-- O segundo ira redirecionar o respectivo id do registro para o metodo delete do controller user , user/exibir/id-->
<script>
     function apagarAluno(id)
     {
         if (confirm('Confirma a exclusão do registro?'))
         location.href = 'user/Delete?id=' + id;
    }

    function ExibirAluno(id) {
        
            location.href = 'user/Exibir?id=' + id;
    }
</script>

